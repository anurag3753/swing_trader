{
  // Disable auto-formatting on save for HTML files
  "[html]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "editor.defaultFormatter": null
  },
  
  // Disable auto-formatting on save for Django HTML templates
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.formatOnPaste": false,
    "editor.defaultFormatter": null
  },
  
  // General formatting settings
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  
  // HTML specific settings
  "html.format.enable": false,
  "html.format.wrapLineLength": 0,
  "html.format.preserveNewLines": true,
  "html.format.maxPreserveNewLines": null,
  
  // Disable specific extensions that might format HTML
  "emmet.preferences": {
    "format.forceIndentationInsideAttributes": false
  },
  
  // VS Code built-in HTML formatter settings
  "html.format.contentUnformatted": "pre,code,textarea,script,style",
  "html.format.extraLiners": "head, body, /html",
  "html.format.indentHandlebars": false,
  "html.format.indentInnerHtml": false,
  "html.format.insertFinalNewline": false,
  "html.format.templating": true,
  "html.format.unformatted": "wbr, area, base, br, col, embed, hr, img, input, keygen, link, meta, param, source, track",
  "html.format.wrapAttributes": "preserve-aligned"
}
